<div class="page-header">
  <p id="notice"><%= notice %></p>
</div>
<div class="page-header">
  <h1>Categories</h1>
</div>

<p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class="col-lg-6"><%= category.name %></td>
          <td class="col-lg-1"><%= link_to 'Show', category %></td>
          <td class="col-lg-1"><%= link_to 'Edit', edit_category_path(category) %></td>
          <td class="col-lg-1"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Category', new_category_path, class: "btn btn-primary pull-right" %>
</p>
