<div class="page-header"></div>
<div class="page-header">
  <%= link_to 'New Article', new_article_path, class: "btn btn-primary pull-right" %>
  <h1>Articles</h1>
</div>

<p id="notice"><%= notice %></p>

<p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td class="col-lg-3"><%= article.title %></td>
          <td class="col-lg-6"><%= article.text %></td>
          <td class="col-lg-1"><%= link_to 'Show', article %></td>
          <td class="col-lg-1"><%= link_to 'Edit', edit_article_path(article) %></td>
          <td class="col-lg-1"><%= link_to 'Destroy', article, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
