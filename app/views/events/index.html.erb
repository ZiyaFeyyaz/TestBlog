<div class="page-header">
  <%= link_to 'New Event', new_event_path, class: "btn btn-primary pull-right" %>
  <h1>Events</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Summary</th>
      <th>Location</th>
      <th>Start time</th>
      <th>End time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="col-lg-3"><%= event.summary %></td>
        <td class="col-lg-2"><%= event.location %></td>
        <td class="col-lg-2"><%= l event.start_time %></td>
        <td class="col-lg-2"><%= l event.end_time %></td>
        <td class="col-lg-1"><%= link_to 'Show', event %></td>
        <td class="col-lg-1"><%= link_to 'Edit', edit_event_path(event) %></td>
        <td class="col-lg-1"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
